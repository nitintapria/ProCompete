<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.csaminorproject.www.procompete.ScoreActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:text="@string/your_score_is"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_marginBottom="62dp"
        android:layout_above="@+id/textView_score"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView_score"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textSize="40sp"
        android:background="@drawable/circular_text_view"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
    
    <View
        android:layout_width="100dp"
        android:layout_height="2dp"
        android:background="@color/colorPrimaryDark"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_score"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="@string/back"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:background="@drawable/rounded_corner"/>

</RelativeLayout>
