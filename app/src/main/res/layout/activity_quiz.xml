<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.csaminorproject.www.procompete.QuizActivity">

    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="0.6"
        android:orientation="horizontal"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/textView_quizTitle"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="wrap_content"
            android:id="@+id/textView_questionNumber"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_vertical"
            android:textSize="18sp"
            android:layout_marginEnd="3dp"
            android:layout_marginStart="3dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="wrap_content"
            android:id="@+id/textView_timer"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginEnd="5dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/textView_questionStatement"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.8"
        android:textColor="#FFFFFF"
        android:background="#000000"
        android:textSize="30sp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="5dp"
        android:background="#000000">

        <TextView
            android:id="@+id/textView_option1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="20sp"
            android:background="@drawable/option_background_default"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/textView_option2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_marginStart="5dp"
            android:background="@drawable/option_background_default"
            android:textColor="#000000"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingStart="5dp"
        android:paddingBottom="5dp"
        android:paddingEnd="5dp"
        android:background="#000000">

        <TextView
            android:id="@+id/textView_option3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="20sp"
            android:background="@drawable/option_background_default"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/textView_option4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:gravity="center"
            android:textSize="20dp"
            android:background="@drawable/option_background_default"
            android:textColor="#000000"/>

    </LinearLayout>

</LinearLayout>
